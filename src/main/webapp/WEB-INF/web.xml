<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.cube.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.cube.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>projectServlet</servlet-name>
        <url-pattern>/projectServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>projectServlet</servlet-name>
        <servlet-class>com.cube.servlet.ProjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>competitionServlet</servlet-name>
        <url-pattern>/competitionServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>competitionServlet</servlet-name>
        <servlet-class>com.cube.servlet.CompetitionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>volunteerServlet</servlet-name>
        <url-pattern>/volunteerServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>volunteerServlet</servlet-name>
        <servlet-class>com.cube.servlet.VolunteerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>refereeServlet</servlet-name>
        <url-pattern>/refereeServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>refereeServlet</servlet-name>
        <servlet-class>com.cube.servlet.RefereeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listServlet</servlet-name>
        <url-pattern>/listServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listServlet</servlet-name>
        <servlet-class>com.cube.servlet.ListServlet</servlet-class>
    </servlet>
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>com.cube.filter.baseFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.cube.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>

        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>